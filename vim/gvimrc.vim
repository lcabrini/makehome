" Remove menu, toolbars and scrollbars
set guioptions=-T
set guioptions=-m
set guioptions=-r
set guioptions=-R
set guioptions=-l
set guioptions=-L

" Set the font
set guifont=Inconsolata\ 12

" Stop the cursor from blinking
set guicursor=a:block-blinkon0
